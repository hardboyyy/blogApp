<% include partials/header %>
<div class = "ui main text container">
    <div class = "ui huge header">
        Blog Post
    </div>
    <div class = "ui top attached segment">
        <div class ="ui divided items">
            <% blogs.forEach(function(blogs){ %>
            <div class = "item">
                <div class = "image">
                    <img src = "<%= blogs.image %>" >    
                </div>
               <div class = "content">
                   <a href = "/blogs/<%= blogs._id %>" class = "header"><%= blogs.title %></a> 
                   <div class = "meta">
                       <span><%=blogs.created.toDateString() %></span>
                   </div>
                   <div class = "description">
                        <p> <%- blogs.body%>...</p>
                   </div>
                   <div class = "extra">
                       <a class = "ui floated basic violet button" href = "/blogs/<%= blogs._id %>">
                           ReadMore
                           <i class = "right chevron icon"></i>
                        </a>
                   </div>
               </div>
            </div>
    <% }); %>            
        </div>
    </div>
</div>


<% include partials/footer %>